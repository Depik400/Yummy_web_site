<script src="../src/menu.js" defer></script>
<script src="../src/header_image_click.js" defer></script>
<header class="header">
  <div class="header__image">
    <div class="container">
      {{#if NotLogin}}
      <div class="auth">
        <div class="loginblock">
          <a class="login_btn" href="#">login</a>
          <form action="#" method="POST" id="login__form" class="login__open__form">
            <input type="text" placeholder="login" name="name" class="input__login">
            <input type="password" placeholder="password" name="pass" class="input__password">
            <input class="sumbit__login" type="button" value="Войти">
          </form>
        </div>
        <div class="registerblock">
          <a href="/user/registration">register</a>
        </div>
      </div>
      {{else}}
      <div class="auth__container">
        <div class="auth__user__profile">
          <span class="username">{{username}}</span>
          <img src="../img/Avatar.png" width="50" height="50" alt="">
        </div>
        <a href="/user/logout">Выйти</a>
      </div>
      {{/if}}
    </div>
  </div>
  <div class="mobile">
    <div class="mobile__auth__block">
      {{#if NotLogin}}
      <div class="login__block">
        <a class="login_btn" href="#">LOGIN</a>
        <form action="#" method="POST" id="login__form__mobile" class="login__open__form">
          <input type="text" placeholder="login" name="name" class="input__login">
          <input type="password" placeholder="password" name="pass" class="input__password">
          <input class="sumbit__login" id="sumbit__login__mobile" type="button" value="Submit">
      </div>
      <div class="register__block">
        <a href="/user/registration">REGISTER</a>
      </div>
      {{else}}
            <div class="auth__container">
        <div class="auth__user__profile">
          <span class="username">{{username}}</span>
          <img src="../img/Avatar.png" width="50" height="50" alt="">
        </div>
        <a href="/user/logout">Выйти</a>
      </div>     
      {{/if}}
    </div>
  </div>
</header>
<div class="image__logo">
  <img src="../img/logo.png" alt="" class="image__logo__log" />
</div>
<div class="bars">
  <span class="fa_bars"></span>
</div>
